# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
	output_format = "i3bar"
}

order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

cpu_temperature 0 {
    format = " %degrees°C"
    max_threshold = "80"
    format_above_threshold = " %degrees°C"
    path = "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon5/temp1_input"
}

volume master {
    format = " %volume"
    format_muted = " Muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
	format = " %usage"
	degraded_threshold = 75
	max_threshold = 85
}

wireless _first_ {
	format_up = " %essid %quality"
        format_down = ""
}

ethernet _first_ {
    format_up = " %speed"
    format_down = ""
}

battery all {
        format = "%status %percentage"
	format_down = ""
	last_full_capacity = true
	status_chr = ""
	status_bat = ""
	status_unk = "?"
	status_full = ""
	low_threshold = 10
}

disk "/" {
        format = " %percentage_used"
}

load {
        format = "%1min"
}

memory {
    format = " %used"
    threshold_degraded = "3G"
    threshold_critical = "2G"
    format_degraded = " %used"
}

tztime local {
        format = " %d/%m/%Y  %H:%M:%S"
}
